--[[
    Marketplace Accessory Position Adjust
    GetObjects | Executor
    R6 & R15
    ONLY adjust position higher to shoulder
--]]

local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

-- üîß ID v·∫≠t ph·∫©m
local ASSET_ID = 4504231783 -- v√≠ d·ª•: 123456789

-- üîß CH·ªàNH ƒê·ªò CAO ·ªû ƒê√ÇY (c√†ng l·ªõn = c√†ng cao)
local HEIGHT_OFFSET = 1.5   -- ‚Üë tƒÉng s·ªë n√†y n·∫øu ch∆∞a ch·∫°m vai
local SIDE_OFFSET   = 1.8   -- sang ph·∫£i/tr√°i
local FRONT_OFFSET  = 0     -- tr∆∞·ªõc/sau

-- =========================
-- LOAD ASSET
-- =========================
local objects = game:GetObjects("rbxassetid://" .. ASSET_ID)
if not objects or #objects == 0 then
    warn("Kh√¥ng load ƒë∆∞·ª£c asset")
    return
end

-- =========================
-- FIND ACCESSORY
-- =========================
local acc0
for _, o in ipairs(objects) do
    if o:IsA("Accessory") then
        acc0 = o
        break
    elseif o:IsA("Model") then
        for _, v in ipairs(o:GetDescendants()) do
            if v:IsA("Accessory") then
                acc0 = v
                break
            end
        end
    end
end

if not acc0 then
    warn("Asset kh√¥ng ph·∫£i Accessory")
    return
end

local acc = acc0:Clone()
acc.Parent = character

-- =========================
-- HANDLE
-- =========================
local handle = acc:FindFirstChild("Handle")
if not handle then
    warn("Accessory kh√¥ng c√≥ Handle")
    return
end

handle.Anchored = false
handle.CanCollide = false
handle.Massless = true

-- =========================
-- R6 / R15 TORSO
-- =========================
local torso = character:FindFirstChild("UpperTorso") or character:FindFirstChild("Torso")
if not torso then
    warn("Kh√¥ng t√¨m th·∫•y Torso")
    return
end

-- =========================
-- POSITION (N√ÇNG L√äN VAI)
-- =========================
handle.CFrame =
    torso.CFrame
    * CFrame.new(SIDE_OFFSET, HEIGHT_OFFSET, FRONT_OFFSET)
    * CFrame.Angles(0, math.rad(0), 0)

-- =========================
-- WELD
-- =========================
local weld = Instance.new("WeldConstraint")
weld.Part0 = handle
weld.Part1 = torso
weld.Parent = handle

print("‚úÖ ƒê√£ ch·ªânh accessory l√™n cao ch·∫°m vai")
